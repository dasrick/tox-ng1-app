{
  "name": "tox-ng1-app",
  "version": "0.0.5",
  "description": "This is a sample app, that based on AngularJS 1.",
  "author": "Enrico Hoffmann <dasrick@gmail.com>",
  "license": "MIT",
  "main": "web.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dasrick/tox-ng1-app.git"
  },
  "bugs": {
    "url": "https://github.com/dasrick/tox-ng1-app/issues"
  },
  "homepage": "https://github.com/dasrick/tox-ng1-app#readme",
  "dependencies": {
    "angular": "^1.4.9",
    "bootstrap": "^3.3.6",
    "clean-css": "^3.4.9",
    "express": "^4.13.4",
    "font-awesome": "^4.5.0",
    "jscs": "^2.9.0",
    "jshint": "^2.9.1",
    "jshint-stylish": "^2.1.0",
    "json-loader": "^0.5.4",
    "less": "^2.6.0",
    "less-plugin-autoprefix": "^1.5.1",
    "ng-annotate-webpack-plugin": "^0.1.2",
    "webpack": "^1.12.12"
  },
  "devDependencies": {
    "angular-mocks": "^1.4.9"
  },
  "scripts": {
    "postinstall": "npm run build",
    "prebuild": "mkdir -p web/css/ web/i18n/ web/js/ web/views/ web/fonts/font-awesome",
    "build": "npm run build:fonts && npm run build:css && npm run jscs && npm run jshint && npm run build:js",
    "build:css": "lessc --autoprefix='last 2 versions,ie 9' src/media/less/style.less web/css/style.css && cleancss --source-map -o web/css/style.min.css web/css/style.css",
    "build:fonts": "npm run build:font-fontawesome",
    "build:font-fontawesome": "cp -R node_modules/font-awesome/fonts/* web/fonts/font-awesome",
    "build:js": "webpack --config webpack.config.js",
    "jscs": "jscs ./src ./test",
    "jshint": "jshint ./src ./test --reporter node_modules/jshint-stylish/index.js",
    "start": "node web.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
